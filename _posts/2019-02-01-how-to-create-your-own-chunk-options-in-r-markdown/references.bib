  pages =         {87--100},
  publisher =     {Elsevier B.V.},
  title =         {{Click bait: Forward-reference as lure in online news
                   headlines}},
  volume =        {76},
  year =          {2015},
  abstract =      {This is why you should read this article. Although
                   such an opening statement does not make much sense
                   read in isolation, journalists often write headlines
                   like this on news websites. They use the
                   forward-referring technique as a stylistic and
                   narrative luring device trying to induce anticipation
