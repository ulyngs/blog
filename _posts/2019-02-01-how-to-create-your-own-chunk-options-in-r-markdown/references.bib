@article{Corbetta1991,
  author =        {Corbetta, M and Miezin, F M and Dobmeyer, S and
                   Shulman, G L and Petersen, S E},
  journal =       {The Journal of neuroscience : the official journal of
                   the Society for Neuroscience},
  number =        {8},
  pages =         {2383--402},
  title =         {{Selective and divided attention during visual
